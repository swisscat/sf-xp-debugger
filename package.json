{
  "name": "sf-xp-debugger",
  "version": "1.3.0",
  "dependencies": {
    "@salesforce-ux/design-system": "^2.19.0",
    "@salesforce/design-system-react": "^0.10.48",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.59",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "jsforce": "^1.11.0",
    "logviewer": "https://gitpkg.now.sh/swisscat/debug-log-analyzer/log-viewer?main&scripts.postinstall=npm%20install%20--ignore-scripts%20%26%26%20npm%20run%20build",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.8.3",
    "webextension-polyfill": "^0.10.0"
  },
  "scripts": {
    "watch": "npm-run-all --parallel watch:*",
    "build": "INLINE_RUNTIME_CHUNK=false craco build",
    "test": "craco test",
    "postinstall": "postinstall",
    "zip": "bestzip extension.zip build/*",
    "clean": "",
    "watch:react": "BROWSER=none craco start",
    "watch:public": "cpx \"public/!(index.html)\" build --watch --clean",
    "watch:public-subfolders": "cpx \"public/!(index.html)/**\" build --watch --clean",
    "watch:web-ext": "sleep 3 && mkdir -p profile/chromium && web-ext run -t chromium -s build --chromium-profile profile/chromium --keep-profile-changes"
  },
  "postinstall": {
    "@salesforce-ux/design-system/assets/styles/salesforce-lightning-design-system.min.css": "copy public/lib/",
    "@salesforce-ux/design-system/assets/icons": "copy public/lib/",
    "webextension-polyfill/dist/browser-polyfill.min.*": "copy public/lib/",
    "logviewer/out/*": "copy public/lib/logviewer/"
  },
  "devDependencies": {
    "@craco/craco": "^7.0.0-alpha.7",
    "@types/har-format": "^1.2.8",
    "@types/jsforce": "^1.9.43",
    "@types/webextension-polyfill": "^0.9.1",
    "bestzip": "^2.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "cpx": "^1.5.0",
    "csv-parse": "^5.3.0",
    "npm-run-all": "^4.1.5",
    "postinstall": "^0.7.4",
    "web-ext": "^7.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "webExt": {
    "verbose": true,
    "sourceDir": "build"
  },
  "bugs": {
    "url": "https://github.com/swisscat/sf-xp-debugger/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swisscat/sf-xp-debugger"
  },
  "keywords": [
    "chrome",
    "extension",
    "typescript",
    "react",
    "salesforce"
  ],
  "author": "Etienne Favre",
  "license": "ISC"
}
